<head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
</head>
<body>

  <div class="header" style="background-color: #5F9EA0;padding: 20px;text-align: center;">
    <h1>Your transactions, <%=current_user.username %> for account : <%=@accounts.account_number%></h1>
  </div>

  <div class="usersList">  
      <table class="table table-hover listing" >
      <tbody>
        <tr class="header" style="color: white; background-color: #373a3c">
          <th>Date</th>
          <th>Description</th>
          <th>Transaction Type</th>
          <th >Amount</th>
        </tr>
        <% @transactions.each do |t| %>
        <tr>
          <td><%= t.created_at %></td>
          <td><%= t.description%></td>
          <td><%= t.transactionType%></td>
          <td><%= @accounts.currency + t.amount.to_s%> </td>
          <!-- <td class="actions"> -->
        </td>
        </tr>
        <% end %>
      </tbody>
      </table>
  </div>
</body>
